{
  "name": "@cwsoftware/cw.js",
  "version": "0.0.0",
  "description": "The JavaScript SDK for Cosmos Wasm Daemon",
  "author": "Larry Lyu <gm@larry.engineer>",
  "license": "UNLICENSED",
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.cts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "require": "./dist/index.cjs",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist/",
    "*.md",
    "./package.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cwsoftware123/cwd.git",
    "directory": "sdk/js"
  },
  "scripts": {
    "check:type": "yarn tsc --noEmit --project tsconfig.json",
    "check:biome": "yarn biome check --apply ./src ./examples",
    "check:package": "yarn pack && yarn publint --public --strict && attw --pack",
    "build": "yarn tsup --config ./tsup.config.ts",
    "test": "yarn vitest run",
    "docs": "yarn typedoc ./src/index.ts --options ./typedoc.config.cjs"
  },
  "dependencies": {
    "@cosmjs/crypto": "^0.32.2",
    "@cosmjs/tendermint-rpc": "^0.32.2"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.13.10",
    "@biomejs/biome": "1.5.3",
    "@types/node": "^20.11.20",
    "publint": "^0.2.7",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "typedoc": "^0.25.8",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
