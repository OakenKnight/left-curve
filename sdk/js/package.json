{
  "name": "@cwsoftware/cw.js",
  "version": "0.0.0",
  "description": "The JavaScript SDK for Cosmos Wasm Daemon",
  "author": "Larry Lyu <gm@larry.engineer>",
  "license": "UNLICENSED",
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.cts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "require": "./dist/index.cjs",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist/",
    "*.md",
    "./package.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cwsoftware123/cwd.git",
    "directory": "sdk/js"
  },
  "scripts": {
    "check:type": "yarn tsc --noEmit --project tsconfig.json",
    "check:package": "yarn publint --public --strict && attw --pack",
    "build": "yarn tsup --config ./tsup.config.ts",
    "test": "yarn vitest run",
    "lint": "yarn biome check --apply ./src ./examples",
    "docs": "yarn typedoc ./src/index.ts --options ./typedoc.config.cjs"
  },
  "dependencies": {
    "@cosmjs/crypto": "workspace:^",
    "@cosmjs/tendermint-rpc": "workspace:^"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "workspace:^",
    "@biomejs/biome": "workspace:^",
    "@types/node": "workspace:^",
    "publint": "workspace:^",
    "tsup": "workspace:^",
    "typedoc": "workspace:^",
    "typescript": "workspace:^",
    "vitest": "workspace:^"
  },
  "packageManager": "yarn@4.1.0"
}
