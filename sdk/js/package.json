{
  "name": "@cwsoftware/cw.js",
  "version": "0.0.0",
  "description": "The JavaScript SDK for Cosmos Wasm Daemon",
  "author": "Larry Lyu <gm@larry.engineer>",
  "license": "UNLICENSED",
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.cts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "require": "./dist/index.cjs",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist/",
    "*.md",
    "./package.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cwsoftware123/cwd.git",
    "directory": "sdk/js"
  },
  "scripts": {
    "build": "bun run build.mjs",
    "lint": "eslint ./src --ext .ts",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "check-package": "npm pack && npx publint@latest --public --strict && attw --pack"
  },
  "dependencies": {
    "@cosmjs/crypto": "^0.32.2",
    "@cosmjs/tendermint-rpc": "^0.32.2"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.13.10",
    "@stylistic/eslint-plugin": "^1.6.2",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "bun-plugin-dts": "^0.2.1",
    "bun-types": "^1.0.29",
    "eslint": "^8.57.0",
    "publint": "^0.2.7",
    "typescript": "^5.3.3"
  }
}
