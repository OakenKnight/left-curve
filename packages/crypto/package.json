{
  "name": "@leftcurve/crypto",
  "version": "0.1.0",
  "private": true,
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "typings": "./build/index.d.ts",
  "sideEffects": false,
  "files": ["build", "src", "!**/*.spec.ts", "!typedoc.json", "!tsup.config.ts"],
  "scripts": {
    "build": "pnpm tsup --clean",
    "test": "pnpm vitest run",
    "test:watch": "pnpm vitest --watch",
    "dev": "pnpm tsup --watch --onSuccess 'tsup --dts-only --silent' --silent",
    "lint": "pnpm biome check --write src",
    "ci": "pnpm biome ci ./src"
  },
  "devDependencies": {
    "@leftcurve/config": "workspace:^",
    "@leftcurve/encoding": "workspace:^",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@noble/curves": "^1.5.0",
    "@noble/hashes": "^1.4.0",
    "@scure/bip32": "^1.4.0",
    "@scure/bip39": "^1.3.0",
    "cbor-x": "^1.6.0"
  }
}
