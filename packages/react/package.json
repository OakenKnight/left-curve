{
  "name": "@leftcurve/react",
  "version": "0.1.0",
  "scripts": {
    "tw:build": "tailwindcss -o build/components/styles.css --minify",
    "sb:dev": "storybook dev -p 6006",
    "sb:build": "storybook build",
    "dev": "pnpm tsup --watch --silent",
    "lint": "pnpm biome check --write ./src",
    "lint:fix": "pnpm biome ci ./src",
    "ci": "pnpm lint",
    "build": "pnpm tsup --clean"
  },
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "typings": "./build/index.d.ts",
  "sideEffects": false,
  "files": ["build", "src", "!**/*.spec.ts", "!typedoc.json", "!tsup.config.ts"],
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.mjs",
      "default": "./build/index.js"
    },
    "./components": {
      "types": "./build/components/index.d.ts",
      "import": "./build/components/index.mjs",
      "default": "./build/components/index.js"
    },
    "./components/examples": {
      "types": "./build/components/examples/index.d.ts",
      "import": "./build/components/examples/index.mjs",
      "default": "./build/components/examples/index.js"
    },
    "./hooks": {
      "types": "./build/hooks/index.d.ts",
      "import": "./build/hooks/index.mjs",
      "default": "./build/hooks/index.js"
    },
    "./providers": {
      "types": "./build/providers/index.d.ts",
      "import": "./build/providers/index.mjs",
      "default": "./build/providers/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "components": ["./build/components/index.d.ts"],
      "components/examples": ["./build/components/examples/index.d.ts"],
      "hooks": ["./build/hooks/index.d.ts"],
      "providers": ["./build/providers/index.d.ts"]
    }
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.3.0",
    "@leftcurve/connect-kit": "workspace:^",
    "@leftcurve/crypto": "workspace:^",
    "@leftcurve/utils": "workspace:^",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@tanstack/react-query": "^5.53.1",
    "framer-motion": "^11.3.21",
    "react-use": "^17.5.1",
    "tailwind-variants": "^0.2.1",
    "use-sync-external-store": "^1.2.2"
  },
  "devDependencies": {
    "@leftcurve/config": "workspace:^",
    "@leftcurve/types": "workspace:^",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "@storybook/nextjs": "^8.2.9",
    "@storybook/react": "^8.2.9",
    "@types/node": "^20",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/use-sync-external-store": "^0.0.6",
    "autoprefixer": "^10.4.20",
    "glob": "^11.0.0",
    "postcss": "^8",
    "react": "^18",
    "react-dom": "^18.3.1",
    "storybook": "^8.2.9",
    "tailwindcss": "^3.4.1"
  },
  "peerDependencies": {
    "react": "^18",
    "react-dom": "^18"
  }
}
